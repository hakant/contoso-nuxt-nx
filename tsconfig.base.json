{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jumbo/accounts": ["libs/domains/accounts/src/index.ts"],
      "@jumbo/recipes": ["libs/domains/recipes/src/index.ts"],
      "@jumbo/shared": ["libs/domains/shared/src/index.ts"],
      "@jumbo/stores": ["libs/domains/stores/src/index.ts"],
      "@jumbo/stores/nuxt": ["libs/domains/stores/src/"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
